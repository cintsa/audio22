#:import utils kivy.utils
<RecordForm>:
    canvas.before:
        Color:
            rgb: utils.get_color_from_hex('#212946')
        Rectangle:
            pos: self.pos
            size: self.size


    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            size_hint: [1, .2]
            orientation: "horizontal"
            Button:
                text: "START"
                bold: True
                on_press: root.start_record()
            Button:
                text: "STOP"
                bold: True
                on_press: root.stop()
